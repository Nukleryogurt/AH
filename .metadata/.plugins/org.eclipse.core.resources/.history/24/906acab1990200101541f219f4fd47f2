package domein;

import java.util.HashMap;
import java.util.Map;

public class Gebouwen {
    private Map<String, GebouwPunten> gebouwen;

    public Gebouwen() {
        gebouwen = new HashMap<>();
        gebouwen.put("paviljoen", new GebouwPunten("paviljoen", 0));
        gebouwen.put("harem", new GebouwPunten("harem", 0));
        gebouwen.put("arcaden", new GebouwPunten("arcaden", 0));
        gebouwen.put("woning", new GebouwPunten("woning", 0));
        gebouwen.put("tuin", new GebouwPunten("tuin", 0));
        gebouwen.put("toren", new GebouwPunten("toren", 0));
    }

    public void voegPuntenToe(String gebouwNaam, int punten) {
        GebouwPunten gebouw = gebouwen.get(gebouwNaam);
        if (gebouw != null) {
            gebouwen.put(gebouwNaam, new GebouwPunten(gebouwNaam, gebouw.getPunten() + punten));
        }
    }

    public Map<String, GebouwPunten> getGebouwen() {
        return gebouwen;
    }
}
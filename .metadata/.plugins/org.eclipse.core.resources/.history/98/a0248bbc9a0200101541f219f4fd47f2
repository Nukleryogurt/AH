package domein;

import java.util.Random;

public class Dobbelsteen {
    private String[] kleuren = {"blauw", "rood", "bruin", "grijs", "groen", "paars"};
    private String huidigeKleur;

    public Dobbelsteen() {
        werp();
    }

    public void werp() {
        Random rand = new Random();
        huidigeKleur = kleuren[rand.nextInt(kleuren.length)];
    }

    public String getHuidigeKleur() {
        return huidigeKleur;
    }
}